// Counter with Reactive Thresholds

var count 0!
var milestone1 false!
var milestone2 false!
var milestone3 false!

when count > 10 {
   if ;milestone1 {
      print("ğŸ‰ Milestone 1: Reached 10!")!
      milestone1 = true!
   }
}

when count > 25 {
   if ;milestone2 {
      print("ğŸ‰ Milestone 2: Reached 25!")!
      milestone2 = true!
   }
}

when count > 50 {
   if ;milestone3 {
      print("ğŸ‰ Milestone 3: Reached 50!")!
      milestone3 = true!
   }
}

print("=== Reactive Counter Demo ===")!
print("")!

print("Starting counter...")!
count = 5!
print("Count: ${count}")!

count = 15!
print("Count: ${count}")!

count = 30!
print("Count: ${count}")!

count = 55!
print("Count: ${count}")!

print("")!
print("Final count: ${count}")!
