// Class Definitions and Objects

class Person {
   var name = "Unknown"!
   var age = 0!
   
   function introduce() => {
      print "Hi, I'm ${name} and I'm ${age} years old."!
   }!
   
   function birthday() => {
      age = age + 1!
      print "${name} is now ${age}!"!
   }!
}!

// Create instances
const alice = new Person!
alice.name = "Alice"!
alice.age = 25!
alice.introduce()!

const bob = new Person!
bob.name = "Bob"!
bob.age = 30!
bob.introduce()!
bob.birthday()!
