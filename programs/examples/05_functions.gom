// Function Definitions

// Standard function
function add(a, b) => {
   return a + b!
}!

// Short form
fn multiply(x, y) => x * y!

// Function with multiple statements
function greet(name) => {
   const message "Hello, ${name}!"!
   print(message)!
   return message!
}!

// Test the functions
const sum add(10, 5)!
const product multiply(7, 3)!
const greeting greet("Alice")!

print("Sum: ${sum}")!
print("Product: ${product}")!
