// Reactive Programming with When Statements

var counter = 0!

when counter > 5 {
   print "Counter exceeded 5!"!
}

when counter > 10 {
   print "Counter exceeded 10!"!
}

// Trigger the watchers
print "Setting counter to 3..."!
counter = 3!

print "Setting counter to 7..."!
counter = 7!

print "Setting counter to 15..."!
counter = 15!
